{
  "compilerOptions": {
    "baseUrl": "/",
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@seeders/*": ["src/seeders/*"],
      "@config/*": ["src/config/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**/*"]
}
